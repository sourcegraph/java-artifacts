			<plugins>

				<plugin>
					<groupId>com.carrotgarden.maven</groupId>
					<artifactId>carrot-maven-staging-plugin</artifactId>
					<version>1.1.0</version>
				</plugin>

				<plugin>
					<groupId>org.apache.maven.plugins</groupId>
					<artifactId>maven-invoker-plugin</artifactId>
